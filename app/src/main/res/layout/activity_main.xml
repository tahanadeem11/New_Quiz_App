<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewDisplayy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="271dp"
        android:text="Hello World!"
        android:textColor="#FF0000"
        android:textColorHint="#FF0000"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/imageViewNo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewNo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="176dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewYes"
        app:srcCompat="@android:drawable/ic_delete" />

    <ImageView
        android:id="@+id/imageViewYes"
        android:layout_width="82dp"
        android:layout_height="77dp"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="176dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDisplayy"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@android:drawable/ic_menu_edit" />

    <ImageView
        android:id="@+id/imageViewQuestion"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_marginStart="69dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="69dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewDisplayy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/__2_php_logo_png_picture" />

</androidx.constraintlayout.widget.ConstraintLayout>